<div class="new-main">
  <div class="container">
    <div class="row">
      <h2 class="text-center">Get the latest updates from Stories</h2>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= form_for(@signup) do |f| %>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :firstname, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Email %>
          <%= f.email_field :email, :class => "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Join", :class => "btn btn-default", :role => "button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>